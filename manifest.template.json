{
  "name": "PWA Recommended Content List",
  "short_name": "RecList",
  "start_url": "./src/index.html",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#2C7E34",
  "prefer_related_applications": false,
  "description": "Teacher recommended content, to extend learning.",
  "share_target": {
    "action": "./src/share.html",
    "method": "POST",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "thread": "thread"
    }
  },
  "icons": [
    {
      "src": "./src/assets/icons/web-app-manifest-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "./src/assets/icons/web-app-manifest-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    },
    {
      "src": "./src/assets/icons/apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png"
    }
  ]
}
